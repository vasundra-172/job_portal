<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Job Portal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>

      .job {
        background-color: rgb(208, 224, 238);
        padding: 20px;
        border-radius: 16px;
        display: inline-block;
      }
      .job-card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

      .msg {
        background-color: rgb(60, 139, 218);
        color: white;
        padding: 5px 15px;
        border-radius: 16px;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <nav
      class="flex justify-between bg-blue-500 p-4 text-white text-center text-lg font-bold items-center"
    > 
    <div class="flex space-x-8">
      <a href="/home">Home</a>
      <a href="/">Jobs</a>
      <a href="/">Employers</a>
      <a href="/">Blog</a>
      <a href="/">Contact</a>
    </div>

      <div class="flex space-x-4">
        <a href="/create"><button class="bg-white text-blue-700 font-semibold hover:text-blue py-2 px-4 border border-blue-500 hover:border-transparent rounded">Post a Job</button>
        </a>
        <a href="/login"><button class="bg-white text-blue-700 font-semibold hover:text-blue py-2 px-4 border border-blue-500 hover:border-transparent rounded">Join now</button>
        </a>
        </div>

    </nav>
    <div class="container mx-auto p-6">
      <h1 class="text-3xl font-bold text-center mb-6">Find Your Dream Job</h1>
      <div class="flex justify-center gap-4 mb-6">
        <form class="d-flex" role="search" action="/search" method="GET">
        <input
          id="search"
          type="text"
          placeholder="Keyword"
          class="p-2 border rounded"
          name="title"
        />
        <input
          id="location"
          type="text"
          placeholder="Location"
          class="p-2 border rounded"
          name="location"
        />
        <button
          type="submit"
          class="bg-blue-500 text-white p-2 rounded"
        >
          Search
        </button>
      </form>
      </div>
      <br><br>
      <h3 class="text-black text-center text-lg font-bold">Current Openings</h3>
      <h3 class="text-black text-center text-lg font-bold">are here!</h3>
      <br /> <br>
      <div id="job-list" class="flex flex-wrap justify-center m-4 text-center space-x-8 space-between">
        <% for(let job of jobs){ %>
        <div class="job w-80 mb-8 job-card">
          <h2 class="text-lg">Title : <%= job.title %></h2>
          <div class="msg">
            <p>Company : <%= job.company %></p>
            <p>Location : <%= job.location %></p>
            <p>Description : <%= job.description %></p>
          </div>
        </div>
        <br /><br />
        <% } %>
      </div>
    </div>
  </body>
</html>
