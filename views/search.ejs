<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
      .job {
        background-color: rgb(208, 224, 238);
        padding: 20px;
        border-radius: 16px;
        display: inline-block;
      }
      .job-card:hover {
            transform: scale(1.05);
            transition: transform 0.3s ease-in-out;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

      .msg {
        background-color: rgb(60, 139, 218);
        color: white;
        padding: 5px 15px;
        border-radius: 16px;
      }
    </style>
  </head>
  <body class="bg-gray-100">
    <nav
      class="flex justify-between bg-blue-500 p-4 text-white text-center text-lg font-bold items-center"
    >
      <div class="flex space-x-8">
        <a href="/home">Home</a>
        <a href="/">Jobs</a>
        <a href="/">Employers</a>
        <a href="/">Blog</a>
        <a href="/">Contact</a>
      </div>

      <div class="flex space-x-4">
        <a href="/create"
          ><button
            class="bg-white text-blue-700 font-semibold hover:text-blue py-2 px-4 border border-blue-500 hover:border-transparent rounded"
          >
            Post a Job
          </button>
        </a>
        <a href="/login"
          ><button
            class="bg-white text-blue-700 font-semibold hover:text-blue py-2 px-4 border border-blue-500 hover:border-transparent rounded"
          >
            Join now
          </button>
        </a>
      </div>
    </nav>
    <div class="max-w-3xl mx-auto bg-white p-6 rounded shadow">
      <h1 class="text-2xl font-bold text-center mb-4">Search Results</h1>

      <% if (message) { %>
          <p class="text-center text-red-500"><%= message %></p>
      <% } else { %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <% allJobs.forEach(job => { %>
                  <div class="p-4 border rounded shadow job-card bg-blue-100">
                      <h2 class="text-xl font-bold">Title: <%= job.title %></h2>
                      <div class="bg-blue-500 text-white p-2 rounded mt-2">
                          <p>Company: <%= job.company %></p>
                          <p>Location: <%= job.location %></p>
                          <p>Description: <%= job.description %></p>
                      </div>
                  </div>
              <% }); %>
          </div>
      <% } %>
  </div>
  </body>
</html>
